<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView5"
        android:src="@drawable/augmentation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/stat_velo_cal"
        android:textColor="#000000"
        android:layout_below="@+id/stat_velo_dictance"
        android:layout_alignLeft="@+id/stat_velo_dictance"
        android:layout_alignStart="@+id/stat_velo_dictance"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/stat_velo_dictance"
        android:textColor="#000000"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/stat_run_cal"
        android:layout_alignStart="@+id/stat_run_cal"
        android:layout_marginTop="33dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:src="@drawable/bicycle"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/stat_run_cal"
        android:layout_toLeftOf="@+id/stat_run"
        android:layout_toStartOf="@+id/stat_run" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView3"
        android:src="@drawable/clicknrun"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/stat_run_dictance"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/stat_run_cal"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/stat_run_dictance"
        android:layout_alignLeft="@+id/stat_run_dictance"
        android:layout_alignStart="@+id/stat_run_dictance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/stat_run"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:textColor="#000000"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/stat_velo"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/stat_run"
        android:textColor="#000000"
        android:layout_alignStart="@+id/stat_run" />

</RelativeLayout>